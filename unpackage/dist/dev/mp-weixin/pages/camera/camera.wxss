	

	/* 重写样式表 */
.area {
		width:100%;
		height:100%;
		overflow: hidden;
}
.cameraArea {
		height:60vh;
		width:100%;
		display: flex;
		flex-direction: column;
		position:fixed;
}
.cameraCanvas {
		width:100vw;
		height:60%;
		display: block;
}
