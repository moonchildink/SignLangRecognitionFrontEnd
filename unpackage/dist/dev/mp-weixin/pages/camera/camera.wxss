.cameraBtnBar {
		width:100%;
		height:20%;
		background-color: darkgray;
		display: flex;
		flex-direction: row;
}
.cameraBtn{
		width:50px;
		height:50px;			
		/* 注意:rpx为相对单位,如果要设计一个正圆,那么要避免使用rpx单位 */
		border-radius: 50%;
		margin:auto;
		font-size: 15px;
		line-height: 50px;
		letter-spacing: 0px;
		border:none;
		-webkit-writing-mode: horizontal-tb;
		        writing-mode: horizontal-tb;
}
	
